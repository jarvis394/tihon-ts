{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": false,
    "allowJs": true,
    "paths": {
      "@config/*": ["./config/*"],
      "@globals/*": ["./globals/*"],
      "@models/*": ["./models/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@interfaces": ["./interfaces"],
      "@structures/*": ["./structures/*"],
      "@utils/*": ["./utils/*"],
      "@commands/*": ["./commands/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.(t|j)s", "test(s)"]
}
